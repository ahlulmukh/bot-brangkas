<%- include('../layouts/header', { title: 'Dashboard Mamoru' }) %>
<div class="container-xxl position-relative bg-white d-flex p-0">
  <%- include('../layouts/sidebar', { user: user }) %>
  <div class="content">
    <%- include('../layouts/nav') %>
    <div class="container-fluid pt-4 px-4" id="tableContainer">
      <div class="row g-4">
        <div class="col-12">
          <div class="bg-light rounded h-100 p-4">
            <h6 class="mb-4">Data Brangkas</h6>
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Kategori</th>
                    <th scope="col">Item</th>
                    <th scope="col">Total</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% vault.categories.forEach((category, catIndex) => { %> <%
                  category.items.forEach((item, itemIndex) => { %>
                  <tr>
                    <th scope="row">
                      <%= catIndex * category.items.length + itemIndex + 1 %>
                    </th>
                    <td><%= category.name %></td>
                    <td><%= item.name %></td>
                    <td><%= item.quantity %></td>
                    <td>
                      <button
                        class="btn btn-primary btn-edit"
                        data-category="<%= category.name %>"
                        data-item="<%= item.name %>"
                        data-quantity="<%= item.quantity %>"
                      >
                        Edit
                      </button>
                    </td>
                  </tr>
                  <% }) %> <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../databrangkas/edit') %> <%- include('../layouts/footer') %>
  </div>
</div>

<script>
  $(document).ready(function () {
    $(".btn-edit").on("click", function () {
      const category = $(this).data("category");
      const item = $(this).data("item");
      const quantity = $(this).data("quantity");

      $("#kategori").val(category);
      $("#namaitem").val(item);
      $("#quantity").val(quantity);

      $("#tableContainer").addClass("d-none");
      $("#editFormContainer").removeClass("d-none");
    });

    $("#updateForm").on("submit", function (e) {
      e.preventDefault();
      const category = $("#kategori").val();
      const item = $("#namaitem").val();
      const quantity = $("#quantity").val();

      $.ajax({
        type: "POST",
        url: "/api/edit-item",
        data: { category, item, quantity },
        success: function (response) {
          alert(response.message);
          location.reload();
        },
        error: function (xhr) {
          alert("Error: " + xhr.responseJSON.error);
        },
      });
    });
  });
</script>
